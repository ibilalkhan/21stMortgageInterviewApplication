<Window x:Class="_21stMortgageInterviewApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_21stMortgageInterviewApplication"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Label for User Input -->
        <Label Content="User Input" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="21,44,0,0" FontSize="14"/>

        <!-- TextBox for User Input -->
        <TextBox Name="InputTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="180,55,0,0" Text="{Binding InputText}"/>

        <!-- Button to Find Largest Value -->
        <Button Content="Find Largest Value" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="20,100,0,0" Click="FindLargestValueButton_Click"/>

        <!-- Button to Find Sum of Even Numbers -->
        <Button Content="Find Sum of Even Numbers" HorizontalAlignment="Left" VerticalAlignment="Top" Width="180" Margin="180,100,0,0" Click="FindSumEvenNumbersButton_Click"/>

        <!-- Button to Find Sum of Odd Numbers -->
        <Button Content="Find Sum of Odd Numbers" HorizontalAlignment="Left" VerticalAlignment="Top" Width="180" Margin="413,105,0,0" Click="FindSumOddNumbersButton_Click"/>

        <!-- Label for Result -->
        <Label Content="Result" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,160,0,0" FontSize="14"/>

        <!-- TextBox to Display Result -->
        <TextBox Name="ResultTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Margin="180,163,0,0" IsReadOnly="True" FontSize="16" Text="{Binding Result}"/>
    </Grid>
</Window>
